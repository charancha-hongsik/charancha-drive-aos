<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50"
    tools:context=".activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_50"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="60dp"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_topbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="milelog."
                    android:textAppearance="@style/ST2SB"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <ImageButton
                    android:id="@+id/btn_history"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_my"
                    android:background="@null"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_app_days1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마일로그와 함께한지"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:textAppearance="@style/ST2M"
                android:textColor="@color/gray_950"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_topbar" />

            <TextView
                android:id="@+id/tv_app_days2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1일째"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:textAppearance="@style/H3SB"
                android:textColor="@color/pri_500"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_app_days1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_summary_info"
                android:layout_width="match_parent"
                android:layout_height="492dp"
                android:layout_marginTop="24dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:background="@drawable/radius8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_app_days2">


                <TextView
                    android:id="@+id/tv_car_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="BMW 5시리즈 530i"
                    android:textColor="@color/gray_950"
                    android:textAppearance="@style/ST2SB"
                    app:layout_constraintRight_toLeftOf="@+id/btn_edit"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageButton
                    android:id="@+id/btn_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    android:background="@null"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/tv_car_name"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_car_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="123가 456"
                    android:textColor="@color/gray_600"
                    android:textAppearance="@style/B2R"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_car_name"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_summary"
                    android:layout_width="match_parent"
                    android:layout_height="203dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_car_no">

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tv_past_30_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지난 30일간"
                    android:textColor="@color/gray_950"
                    android:textAppearance="@style/C1R"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_summary"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_average_distance"
                    android:layout_width="0dp"
                    android:layout_height="105dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/radius6"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/layout_average_time"
                    app:layout_constraintTop_toBottomOf="@+id/tv_past_30_days">

                    <TextView
                        android:id="@+id/tv_average_distance_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="평균 주행거리 >"
                        android:textAppearance="@style/C1R"
                        android:textColor="@color/gray_600"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_average_distance_contents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="0km"
                        android:textAppearance="@style/ST1M"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_average_distance_title" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/radius999_gray_background"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_average_distance_contents" >

                        <View
                            android:layout_width="5dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:background="@drawable/radius2"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_average_time"
                    android:layout_width="0dp"
                    android:layout_height="105dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/radius6"
                    app:layout_constraintLeft_toRightOf="@+id/layout_average_distance"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_past_30_days">

                    <TextView
                        android:id="@+id/tv_average_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="평균 주행시간 >"
                        android:textAppearance="@style/C1R"
                        android:textColor="@color/gray_600"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/tv_average_time_contents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="0시간 0분"
                        android:textAppearance="@style/ST1M"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_average_time" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/radius999_gray_background"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_average_time_contents" >

                        <View
                            android:layout_width="5dp"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:background="@drawable/radius2"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_recent_manage_score"
                    android:layout_width="0dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/radius6_gray_background"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_average_distance">

                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_subtitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 차 한눈에 보기"
                android:textAppearance="@style/ST2SB"
                android:layout_marginTop="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_summary_info"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_summary_info2"
                android:layout_width="match_parent"
                android:layout_height="492dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/radius8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_subtitle2">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_guide_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="안내"
                android:textAppearance="@style/B2B"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_summary_info2" />

            <TextView
                android:id="@+id/tv_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="마일로그에서 제공하는 주행 데이터는 이용 환경에 따라 실제와 다를 수 있습니다."
                android:textAppearance="@style/C1R"
                android:textColor="@color/gray_700"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_guide_subtitle" />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>