<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btn_drive_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/radius8_white950">

    <LinearLayout
        android:id="@+id/layout_active"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024년 6월 16일"
            android:textAppearance="@style/C1R"
            android:textFontWeight="400"
            android:textColor="@color/gray_700"/>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="73.2km"
            android:textColor="@color/gray_950"
            android:textFontWeight="600"
            android:textAppearance="@style/T1SB"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="17시 36분"
                android:textAppearance="@style/C1R"
                android:textFontWeight="400"
                android:textColor="@color/gray_900"/>


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow_right"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="17시 36분"
                android:textAppearance="@style/C1R"
                android:textFontWeight="400"
                android:textColor="@color/gray_900"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_not_active"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="55dp"
            android:layout_height="22dp"
            android:text="기록제외"
            android:gravity="center"
            android:textColor="@color/sec_500"
            android:textAppearance="@style/C2M"
            android:textFontWeight="500"
            android:background="@drawable/radius999_sec50"
            />

        <TextView
            android:id="@+id/tv_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024년 6월 16일"
            android:layout_marginTop="6dp"
            android:textAppearance="@style/C1R"
            android:textFontWeight="400"
            android:textColor="@color/gray_300"/>

        <TextView
            android:id="@+id/tv_distance2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="73.2km"
            android:textColor="@color/gray_300"
            android:textFontWeight="600"
            android:textAppearance="@style/T1SB"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_time2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="17시 36분"
                android:textAppearance="@style/C1R"
                android:textFontWeight="400"
                android:textColor="@color/gray_300"/>


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow_right"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_end_time2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="17시 36분"
                android:textAppearance="@style/C1R"
                android:textFontWeight="400"
                android:textColor="@color/gray_300"/>

        </LinearLayout>



    </LinearLayout>


    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>