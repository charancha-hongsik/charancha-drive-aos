<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tooltip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/radius6_balck95"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tv_tootip_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1회 평균 주행거리란?"
            android:textAppearance="@style/B2SB"
            android:textFontWeight="600"
            android:textColor="@color/white_op_95"
            />

        <TextView
            android:id="@+id/tv_tootip_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차량이 한 번 주행할 때마다 이동한 거\n리의 평균값이에요. 높을수록 좋아요!"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/C1R"
            android:textFontWeight="400"
            android:textColor="@color/white_op_95"
            />

    </LinearLayout>

    <View
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tooltip"
        app:layout_constraintLeft_toLeftOf="@+id/tooltip"
        app:layout_constraintRight_toRightOf="@+id/tooltip"/>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/src_tooltip_bottom"
        app:layout_constraintBottom_toBottomOf="@+id/bottom"
        app:layout_constraintLeft_toLeftOf="@+id/tooltip"
        android:layout_marginLeft="28dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>