<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_op_95">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_topbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_detail_managescroe_title"
            android:layout_width="200dp"
            android:layout_height="26dp"
            android:text="평균 관리 점수"
            android:textColor="@color/gray_950"
            android:textFontWeight="700"
            android:textAppearance="@style/ST2B"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_arrow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scrollbars="none"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/gray_50"
        android:scrollbars="none"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/layout_topbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:text="2024년 6월 2일 ~ 7월 15일"
                    android:textColor="@color/gray_950"
                    android:textFontWeight="600"
                    android:textAppearance="@style/ST2SB"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/btn_choose_date"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_filter"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_no_score"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/radius8_gray800">

                <TextView
                    android:id="@+id/tv_no_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white_op_95"
                    android:textAppearance="@style/H2SB"
                    android:textFontWeight="600"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_no_score_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="점"
                    android:textColor="@color/white_op_95"
                    android:textAppearance="@style/B1R"
                    android:textFontWeight="400"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/tv_no_score"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_no_score"/>

                <TextView
                    android:id="@+id/tv_no_score1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아직 데이터가 없어요."
                    android:textAppearance="@style/B2M"
                    android:textFontWeight="500"
                    android:textColor="@color/white_op_60"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_no_score_unit" />

                <TextView
                    android:id="@+id/tv_no_score2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="함께 달려볼까요?"
                    android:textAppearance="@style/B2M"
                    android:textFontWeight="500"
                    android:textColor="@color/white_op_60"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_no_score1" />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/resource_face_soso"
                    app:layout_constraintLeft_toRightOf="@+id/tv_no_score2"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_no_score2"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_score"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/radius8_pri500">

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="333"
                    android:textColor="@color/white_op_95"
                    android:textAppearance="@style/H2SB"
                    android:textFontWeight="600"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_score_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="점"
                    android:textColor="@color/white_op_95"
                    android:textAppearance="@style/B1R"
                    android:textFontWeight="400"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/tv_score"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_score"/>

                <TextView
                    android:id="@+id/tv_score1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="굉장해요. 지난 주행보다 +11점 얻었어요!"
                    android:textAppearance="@style/B2M"
                    android:textFontWeight="500"
                    android:textColor="@color/white_op_60"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_score_unit" />


                <ImageView
                    android:id="@+id/iv_score_emoji"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/resource_face_love"
                    app:layout_constraintLeft_toRightOf="@+id/tv_score1"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_score1"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="291dp"
                android:background="@drawable/radius8_white950"
                android:layout_marginTop="16dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/gray_950"
                            android:textFontWeight="600"
                            android:text="엔진"
                            android:textAppearance="@style/ST2SB"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/tv_engine_score_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="점"
                            android:textAppearance="@style/C2R"
                            android:textFontWeight="400"
                            android:textColor="@color/gray_950"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="2dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/gray_950"
                            android:textFontWeight="600"
                            android:textAppearance="@style/T1SB"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/tv_engine_score_unit"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_height="16dp">

                        <View
                            android:id="@+id/view_engine_chart_background"
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@drawable/radius999_gray50"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <View
                            android:id="@+id/view_engine_chart_score"
                            android:layout_width="200dp"
                            android:layout_height="16dp"
                            android:background="@drawable/radius999_pri500"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>
                    
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="6dp">

                        <TextView
                            android:id="@+id/tv_increased_score"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="+11점 증가"
                            android:textFontWeight="400"
                            android:textAppearance="@style/C1R"
                            android:textColor="@color/pri_500"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent" />

                        <TextView
                            android:id="@+id/tv_total_score"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="600점"
                            android:textFontWeight="400"
                            android:textAppearance="@style/C1R"
                            android:textColor="@color/gray_600"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/gray_100"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/tv_engine_info_subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="1회 평균 주행 거리"
                            android:textFontWeight="400"
                            android:textAppearance="@style/B2R"
                            android:textColor="@color/gray_700"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/ic_question_filled"
                            app:layout_constraintLeft_toRightOf="@+id/tv_engine_info_subtitle1"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_engine_info_average_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="15km"
                            android:textColor="@color/gray_950"
                            android:textAppearance="@style/B2SB"
                            android:textFontWeight="600"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tv_engine_info_subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="급가감속 횟수"
                            android:textFontWeight="400"
                            android:textAppearance="@style/B2R"
                            android:textColor="@color/gray_700"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/ic_question_filled"
                            app:layout_constraintLeft_toRightOf="@+id/tv_engine_info_subtitle2"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_engine_info_rapid_acc_de_count"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="16회"
                            android:textColor="@color/gray_950"
                            android:textAppearance="@style/B2SB"
                            android:textFontWeight="600"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tv_engine_info_subtitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="고속 주행"
                            android:textFontWeight="400"
                            android:textAppearance="@style/B2R"
                            android:textColor="@color/gray_700"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/ic_question_filled"
                            app:layout_constraintLeft_toRightOf="@+id/tv_engine_info_subtitle3"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_engine_info_high_speed_driving"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="33.1%"
                            android:textColor="@color/gray_950"
                            android:textAppearance="@style/B2SB"
                            android:textFontWeight="600"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tv_engine_info_subtitle4"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="최적 주행"
                            android:textFontWeight="400"
                            android:textAppearance="@style/B2R"
                            android:textColor="@color/gray_700"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/ic_question_filled"
                            app:layout_constraintLeft_toRightOf="@+id/tv_engine_info_subtitle4"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_engine_info_best_driving"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="13.5%"
                            android:textColor="@color/gray_950"
                            android:textAppearance="@style/B2SB"
                            android:textFontWeight="600"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tv_engine_info_subtitle5"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="항속 주행"
                            android:textFontWeight="400"
                            android:textAppearance="@style/B2R"
                            android:textColor="@color/gray_700"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="2dp"
                            android:src="@drawable/ic_question_filled"
                            app:layout_constraintLeft_toRightOf="@+id/tv_engine_info_subtitle5"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tv_engine_info_normal_driving"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:text="13.5%"
                            android:textColor="@color/gray_950"
                            android:textAppearance="@style/B2SB"
                            android:textFontWeight="600"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    

                </LinearLayout>
                    
                
                



            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/radius6_gray300_dash">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:textAppearance="@style/ST1SB"
                    android:textFontWeight="600"
                    android:textColor="@color/gray_400"
                    android:text="타이어 서비스는 곧 만나요!" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textAppearance="@style/C2M"
                    android:textFontWeight="600"
                    android:textColor="@color/gray_400"
                    android:text="하반기 오픈 예정이에요" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/radius6_gray300_dash">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:textAppearance="@style/ST1SB"
                    android:textFontWeight="600"
                    android:textColor="@color/gray_400"
                    android:text="브레이크 서비스는 곧 만나요!" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textAppearance="@style/C2M"
                    android:textFontWeight="600"
                    android:textColor="@color/gray_400"
                    android:text="하반기 오픈 예정이에요" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:textAppearance="@style/B2B"
                android:textColor="@color/gray_800"
                android:textFontWeight="700"
                android:text="안내"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/C1R"
                android:textColor="@color/gray_700"
                android:layout_marginBottom="60dp"
                android:textFontWeight="400"
                android:text="마일로그에서 제공하는 주행 데이터는 이용 환경에 따라\n실제와 다를 수 있습니다."/>


        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>