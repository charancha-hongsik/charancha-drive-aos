<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_car"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/car_selector"
    android:padding="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TextView 설정 -->
    <TextView
        android:id="@+id/tv_car_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_400"
        android:textAppearance="@style/B1R"
        android:textFontWeight="400"
        android:maxLines="2"
        android:ellipsize="end"
        android:maxWidth="300dp"
        android:text="소나타 디 엣지7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_corp"
        android:layout_marginEnd="4dp" />

    <!-- ImageView 설정 -->
    <ImageView
        android:id="@+id/iv_corp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_corp"
        app:layout_constraintLeft_toRightOf="@id/tv_car_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
    
    <TextView
        android:id="@+id/tv_car_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/C1R"
        android:textFontWeight="400"
        android:textColor="@color/gray_300"
        android:text="123가 1234"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/tv_no_mycar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/B1R"
        android:textFontWeight="400"
        android:textColor="@color/gray_400"
        />

</LinearLayout>