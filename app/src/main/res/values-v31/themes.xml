<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Charanchadriveaos" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/default_background</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Delete default splash screen -->
        <item name="android:windowSplashScreenAnimatedIcon">@color/black_op_100</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <!-- Base application theme. -->
    <style name="Theme.Charanchadrivesplash" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_op_100</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black_op_100</item>


        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Theme for Android 12 and above (delete default splash) -->
        <item name="android:windowSplashScreenBackground">@color/black_op_100</item>
        <item name="android:windowSplashScreenAnimatedIcon">@color/black_op_100</item>

    </style>

    <!-- Base application theme. -->
    <style name="Theme.Charanchadrivewhite100" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_op_100</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white_op_100</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!-- Base application theme. -->
    <style name="Theme.Charanchadrivegray50" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_50</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/gray_50</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

</resources>